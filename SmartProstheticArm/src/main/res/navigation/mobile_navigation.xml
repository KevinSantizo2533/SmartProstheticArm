<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ca.kash.it.smartprostheticarm.ui.status.StatusFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_status" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="ca.kash.it.smartprostheticarm.ui.sensors.SensorFragment"
        android:label="@string/title_sensors"
        tools:layout="@layout/fragment_sensors" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="ca.kash.it.smartprostheticarm.ui.armcontroller.ArmControllerFragment"
        android:label="@string/title_bt"
        tools:layout="@layout/fragment_armcontroller"/>
    <fragment
        android:id="@+id/navigation_settings"
        android:name="ca.kash.it.smartprostheticarm.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@xml/root_preferences"/>
</navigation>