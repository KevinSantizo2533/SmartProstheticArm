<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="SCREEN ORIENTATION" app:icon="@drawable/outline_screen_lock_portrait_black_24dp">

        <ListPreference
            android:key="ORIENTATION"
            android:title="Orientation"
            android:entries="@array/orientation_name"
            android:entryValues="@array/orientation_val"

            />

    </PreferenceCategory>

    <PreferenceCategory android:title="Notifications" android:icon="@drawable/outline_notifications_24">
        <SwitchPreference android:title="New message notifications" />
    </PreferenceCategory>

    <PreferenceCategory android:title="USER PROFILE" android:icon="@drawable/baseline_assignment_ind_24" >
        <EditTextPreference
            android:title="Set username"
            android:summary="Set profile username"
            android:key="userProfile"/>
    </PreferenceCategory>
</PreferenceScreen>