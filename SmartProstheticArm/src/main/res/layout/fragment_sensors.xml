<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sensors_back"
    tools:context=".ui.sensors.SensorFragment">

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.889" />

    <TextView
        android:layout_width="165dp"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="256dp"
        android:text="@string/ultrasonic_readings"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="165dp"
        android:layout_height="27dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="520dp"
        android:text="@string/servos_information"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="214sp"
        android:layout_height="28dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="256dp"
        android:text="@string/temperature_readings"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="117sp"
        android:layout_height="124dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="484dp"
        android:backgroundTint="@color/purple_700"
        android:src="@drawable/ultrasonic"
        android:tooltipText="@string/ultrasonic_readings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:layout_width="117sp"
        android:layout_height="124dp"
        android:layout_marginBottom="224dp"
        android:backgroundTint="@color/purple_700"
        android:src="@drawable/ultrasonic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:layout_width="117sp"
        android:layout_height="124sp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="484dp"
        android:backgroundTint="@color/purple_700"
        android:src="@drawable/ultrasonic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>